    "version": "2.0.0",
    "command": "bash",
    "type": "shell",
    "args": [
        "-c"
    ],
    "tasks": [
        {
            "label": "Run",
            "detail": "Build target debug with `FROM scratch AS breakpoint`",
            "options":{
                "env": {
                    "DOCKER_BUILDKIT":"1"
                },
            },
            "args": [
                "eval `ssh-agent` && ssh-add && docker build --ssh default --tag vsc-debug-image --target debug -f ${file} ${fileDirname} ; killall -9 ssh-agent"
            ],
            "problemMatcher": [],
            "runOptions": {"instanceLimit": 1},
            "group": {
                "kind": "build",
                "isDefault": true,
            }
        }
    ]
}